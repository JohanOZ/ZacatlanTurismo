.row.bloque
    each habitacion in habitaciones 
        .col-md-6.col-lg-4.mb-4
            .card
               
                .card-body
                    h2.text-center Habitación #{habitacion.nombre}
                    
                    p 
                        svg.icon.icon-tabler.icon-tabler-building(xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            line(x1='3' y1='21' x2='21' y2='21')
                            line(x1='9' y1='8' x2='10' y2='8')
                            line(x1='9' y1='12' x2='10' y2='12')
                            line(x1='9' y1='16' x2='10' y2='16')
                            line(x1='14' y1='8' x2='15' y2='8')
                            line(x1='14' y1='12' x2='15' y2='12')
                            line(x1='14' y1='16' x2='15' y2='16')
                            path(d='M5 21v-16a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v16')



                        | Hotel ID: #{habitacion.id_htl} 
                    
                    p   
                        svg.icon.icon-tabler.icon-tabler-box-padding(xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            rect(x='4' y='4' width='16' height='16' rx='2')
                            path(d='M8 16v.01')
                            path(d='M8 12v.01')
                            path(d='M8 8v.01')
                            path(d='M16 16v.01')
                            path(d='M16 12v.01')
                            path(d='M16 8v.01')
                            path(d='M12 8v.01')
                            path(d='M12 16v.01')
            
                        | Piso: #{habitacion.piso}
                    a(href=`habitaciones/editar/${habitacion.id_hbt}`, class= "btn btn-info btn-block") Editar
                    a(href=`habitaciones/eliminar/${habitacion.id_hbt}`, class= "btn btn-warning btn-block") Eliminar
                    a(href=`habitaciones/${habitacion.id_hbt}`, class= "btn btn-success btn-block") Más información 