extends ./layout/index

block contenido

    main.container.mt-5
        .row.mb-5
            .col-md-12
                h1.d-block.w-100.text-center Agrega un Hotel

                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje 

            .row.justify-content-center.col
                .col-md-8
                    form(action="/hoteles", method="POST")
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Nombre Hotel", name="nombre", class="form-control", value= nombre)  
                        .form-group 
                            label(for="direccion") Dirección 
                            input#direccion(type="text", placeholder="Dirección Hotel", name="direccion", class="form-control", value= direccion)
                        .form-group 
                            label(for="telefono") Teléfono 
                            input#telefono(type="text", placeholder="Telefono Hotel", name="telefono", class="form-control", value= telefono)
                        .form-group 
                            label(for="correo") Correo 
                            input#correo(type="email", placeholder="Correo Hotel", name="correo", class="form-control", value= correo)
                        .form-group
                        input.btn.btn-success.btn-block(type="submit", value="Guardar Hotel")

        h1(class="mt-5 pb-5 text-center") #{pagina}

        include ./layout/bloque_hoteles
        
